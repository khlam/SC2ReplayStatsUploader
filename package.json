{
  "name": "SC2ReplayStatsUploader",
  "version": "1.0.0",
  "main": "dist/main.bundle.js",
  "scripts": {
    "start": "cross-env ENV=\"dev\" electron .",
    "linter": "standard --fix",
    "test": "jest --config=jest.config.json",
    "build": "webpack --mode development",
    "build:hot": "webpack --watch --mode development",
    "package-win": "electron-builder --win --publish never"
  },
  "build": {
    "appId": "com.electron.SC2ReplayStatsUploader",
    "productName": "SC2ReplayStatsUploader",
    "win": {
      "asar": true,
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "license": "LICENSE.md",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true
    },
    "directories": {
      "output": "release"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "chai": "^4.2.0",
    "css-loader": "^1.0.0",
    "electron": "^3.0.9",
    "electron-builder": "^20.38.4",
    "electron-packager": "^13.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "regenerator-runtime": "^0.12.1",
    "standard": "^12.0.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "lodash": "^4.17.11",
    "lodash.clonedeep": "^4.5.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6"
  }
}
